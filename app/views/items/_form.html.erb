    <%= form.label :desc %>
    <%= form.text_area :desc, id: :item_desc %>
  </div>

  <div class="field">
    <%= form.label :unidade %>
    <%= form.number_field :unidade, id: :item_unidade %>
  </div>

  <div class="field">
    <%= form.label :gramatura %>
