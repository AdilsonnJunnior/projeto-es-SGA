<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Data val</th>
      <th>N lote</th>
      <th>Desc</th>
      <th>Unidade</th>
      <th>Gramatura</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.data_val %></td>
        <td><%= item.n_lote %></td>
        <td><%= item.desc %></td>
        <td><%= item.unidade %></td>
        <td><%= item.gramatura %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

